@page
@model LEGOINNOVATIVE.Pages.Sites.MasterProfileModel
@{
}

<body class="MasterBody">
    <h1 class="MasterHeader">MASTERBUILDER</h1>

    <div class="MasterTable">
        <h2 class="RequestHeader">Requests</h2>
        <table class="table table-hover">
            <thead>
                <tr class="TableRow">
                    <th>ID</th>
                    <th>Title</th>
                    <th>Plan</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="TableBody">
                @foreach (var item in Model.Orders)
                {
                    if (item.Accepted == false && item.Completed == false) 
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Plan</td>
                            <td>@item.Description</td>
                            <td><a class="arrowButton" asp-page="/Orders/OrderRequests" asp-route-id="@item.Id">&#62;</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="MasterTable">
        <h2 class="ActiveHeader">Active</h2>
        <table class="table table-hover">
            <thead>
                <tr class="TableRow">
                    <th>ID</th>
                    <th>Title</th>
                    <th>Plan</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="TableBodyActive">
                @foreach (var item in Model.Orders)
                {
                    if (item.Accepted == true && item.Completed == false) 
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Plan</td>
                            <td>@item.Description</td>
                            <td><a class="arrowButton" asp-page="/Orders/OrderActive" asp-route-id="@item.Id">&#62;</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="MasterTable">
        <h2 class="CompletedHeader">Completed</h2>
        <table class="table table-hover">
            <thead>
                <tr class="TableRow">
                    <th>ID</th>
                    <th>Title</th>
                    <th>Plan</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="TableBodyCompleted">
                @foreach (var item in Model.Orders)
                {
                    if (item.Accepted == true && item.Completed == true) 
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Plan</td>
                            <td>@item.Description</td>
                            <td><a class="arrowButton" asp-page="/Orders/OrderActive" asp-route-id="@item.Id">&#62;</a></td>
                            <form method="post">
                            <td><input value="Remove" type="submit" class="removeButton" asp-page-handler="Remove" asp-route-id="@item.Id"/> </td>
                            </form>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>

