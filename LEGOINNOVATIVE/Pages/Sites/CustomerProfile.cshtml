@page
@model LEGOINNOVATIVE.Pages.Sites.CustomerProfileModel
@{
}
<body class="CustomerProfileBackground">
    <h1 class="ProfileHeader">Profile</h1>
        <div class="Textboxes">
            <p class="ProfileTextbox">Name : @Model.Profiles.Name</p>
            <p class="ProfileTextbox">Adress : @Model.Profiles.Adress</p>
            <p class="ProfileTextbox">Email : @Model.Profiles.Email</p>
            <p class="ProfileTextbox">Phone : @Model.Profiles.Phone</p>
        </div>
    <div class="YourOrders">
        <h2 class="RequestHeader">Your orders</h2>
        <table class="table table-hover">
            <thead >
                <tr class ="TableRow">
                    <th>ID</th>
                    <th>Title</th>
                    <th>Plan</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="TableBodyCompleted">
                @foreach (var item in Model.Orders){
                    if (Model.Profiles.Email == item.Email){
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Plan</td>
                            <td>@item.Description</td>
                            @if (item.Accepted == false && item.Completed == false){
                                <td>Pending</td>
                                }else if (item.Accepted == true && item.Completed == false){
                                    <td>In progress</td>
                                }
                                else if (item.Accepted == true && item.Completed == true){
                                    <td>Completed</td>
                                }
                            <td><a class="arrowButton" asp-page="/Orders/OrderDetails" asp-route-id="@item.Id">&#62;</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
