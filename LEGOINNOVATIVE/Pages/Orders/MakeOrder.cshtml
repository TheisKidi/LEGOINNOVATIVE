@page
@model LEGOINNOVATIVE.Pages.Orders.MakeOrderModel
@{
}
<body class="makeOrderBody">
    <h1 class="makeOrderHeader">Make Order</h1>
    <div class="row">
        <div class="makeOrderDiv">
            <form method="post">
                <div class="form-group">
                    <p class="makeOrderText">Title</p>
                    <input asp-for="@Model.Title" class="makeOrderInput" placeholder="Descripe your idea" /><br />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="makeOrderText">Description</p>
                    <input asp-for="@Model.Description" class="makeOrderTextDescription" placeholder="Describe in detail" /><br />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="makeOrderText">Your Personal Message</p>
                    <input asp-for="@Model.PersonalMessage" class="makeOrderInput" placeholder="Personal Message . . . " /><br />
                    <span asp-validation-for="@Model.PersonalMessage" class="text-danger"></span>
                </div>

                <p class="makeOrderText">Would you like to publish your IDEA to the LEGO IDEAS forum?</p>
                <input class="makeOrderCheckbox" type="checkbox" asp-for="@Model.Publish" /><p class="checkboxText">Yes</p>

                <p class="makeOrderText">Choose type</p>

                <select class="makeOrderDropdown" asp-for="ChosenPlan">
                    <a href="c:\users\theis\onedrive - zealand\swc\legoinnovative\legoinnovative\pages\orders\makeorder.cshtml.cs">c:\users\theis\onedrive - zealand\swc\legoinnovative\legoinnovative\pages\orders\makeorder.cshtml.cs</a>
                    <a href="c:\users\theis\onedrive - zealand\swc\legoinnovative\legoinnovative\pages\orders\makeorder.cshtml">c:\users\theis\onedrive - zealand\swc\legoinnovative\legoinnovative\pages\orders\makeorder.cshtml</a>
                    @foreach (var p in Model.Plans)
                    {
                        <option value="@p">@p</option>
                    }
                </select>

                <div class="form-group">
                    <input type="submit" value="Make Order" class="makeOrderButton" />
                </div>
            </form>
        </div>
    </div>
</body>